@model IEnumerable<SunriseShelter.Models.Adoption>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Children)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orphanage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdoptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Children.BirthPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orphanage.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdoptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdoptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdoptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
