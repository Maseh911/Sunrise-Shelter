@model IEnumerable<SunriseShelter.Models.Orphanage>

@{
    ViewData["Title"] = "Index";
}

<h1>Orphanages</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.OrphanageId">Edit</a> |
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.OrphanageId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrphanageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
