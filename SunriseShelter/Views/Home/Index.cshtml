@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        .banner-container {
            position: relative;
            width: 100%;
            height: 400px;
            overflow: hidden;
            border-radius: 25px;
        }

            .banner-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: brightness(70%);
            }

        .banner-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
            text-align: center;
        }

        .section {
            padding: 60px 20px;
        }

        .btn-primary {
            background-color: #ff7043;
            border: none;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 30px 0;
        }
    </style>
</head>
<body>

    <div class="banner-container">
        <img src="~/Images/Kiddo.jpg" alt="Front page banner">
        <div class="banner-text">
            <h1 class="display-4 fw-bold">Welcome to Sunrise Shelter</h1>
            <p class="lead">A home of hope and care</p>
            <a href="/Home/Support" class="btn support-btn btn-lg mt-3 px-4 rounded-pill shadow-sm" style="background-color: #ff7043; border:none">
                Support Us
            </a>
        </div>
    </div>

    <div class="section text-center bg-white">
        <div class="container">
            <h2>About Us</h2>
            <p class="mt-3">Sunrise Shelter is dedicated to providing safe, nurturing environments for children in need. Our mission is to give every child a chance to grow, learn, and thrive.</p>
        </div>
    </div>

    <div class="section text-center bg-light">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Email: info@sunriseshelter.org</p>
            <p>Phone: (555) 123-4567</p>
            <p>
                A
            </p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
